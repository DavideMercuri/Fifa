<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/style.css">

    <title>Classifica Campionato</title>
  </head>
  <body>
    
  <a href="test" class="btn btn-success">test</a>
    <div class="container mt-3">     
    <table class="table fs-4">
      <thead class="matchday">
        <tr>
          <th class="align-middle text-center" scope="col" style="display: none;">Id</th>
          <th>Pos</th>
          <th>Squadra</th>
          <th class="align-middle text-center">Punti</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        
      <%
        if(leagueTable.length!=0){
            var i=1;
            leagueTable.forEach(function(data){
      %>
      <tr>
        <td class="align-middle text-center id" style="display: none;"><%=data.id%></td>
        <td class="border align-middle text-center fw-bold" style="width: 5%;"><%=i%></td>   
        <td class="align-middle"><img src="<%=data.team_logo%>" alt="" style="width: 40px; height: 40px;">&nbsp;<span style="margin-left: 2%;"><%=data.team%></span></td>        
        <td class="align-middle text-center fw-bold text-primary"><span class="points"><%=data.points%></span></td>
        <td class="fw-bold"><a class="text-success" style="text-decoration: none;" href="add-win?id=<%=data.id%>">+3</a>&nbsp;&nbsp;<a class="text-warning" style="text-decoration: none;" href="add-draw?id=<%=data.id%>">+1</a></td>
      </tr>

        <%  i++; }) %>
      
        <% } else{ %>
          <tr>
            <td>NO TEAM FOUND!</td>
          </tr>
        <% } %>
      </tbody>
    </table> 
  </div>

    <script src="/javascripts/script.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


</body>
</html>