<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <title>Inserisci Calciatore</title>
  </head>
  <body>

    <% if(success.length > 0) { %>
      <script>
        $(document).ready(function() {
            $(".toast").toast('show');
        });
    </script>
    <div class="toast text-white bg-success position-absolute" data-autohide="false" role="alert" aria-live="assertive" aria-atomic="true" style="top: 10%; right: 20%;">
      <div class="d-flex">
          <div class="toast-body">
            <%= success %>
         </div>
          <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close" style="color: white;"></button>
        </div>
      </div>
      <% } else if(fail.length > 0){ %>
        <script>
          $(document).ready(function() {
              $(".toast").toast('show');
          });
      </script>
      <div class="toast text-white bg-danger position-absolute" data-autohide="false" role="alert" aria-live="assertive" aria-atomic="true" style="top: 10%; right: 20%;">
        <div class="d-flex">
            <div class="toast-body">
              <%= fail %>
           </div>
            <button type="button" class="btn-close me-2 m-auto text-white" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
        </div>

        <% } %>

    <div class="container mt-5">
    <form method="post">
        <div class="row">
          <div class="mb-3 col-3">
            <label for="name" class="form-label">Nome</label>
            <input type="text" class="form-control" id="name" placeholder="Inserire nome giocatore" name="name">
          </div>
          <div class="mb-3 col-3">
            <label for="country" class="form-label">Nazionalità</label>
            <input type="text" class="form-control" id="country" placeholder="Inserire nazionalità giocatore" name="country">
          </div>
        </div>
        <div class="row">
          <div class="mb-3 col-3">
            <label for="position" class="form-label">Ruolo</label>
            <input class="form-control" list="datalistOptions" id="role" placeholder="Cerca ruolo..." name="position">
            <datalist id="datalistOptions">
              <option value="POR">
              <option value="TS">
              <option value="ASA">
              <option value="DC">
              <option value="TD">
              <option value="ADA">
              <option value="CDC">
              <option value="CC">
              <option value="COC">       
              <option value="AT">
              <option value="ES">
              <option value="AS">
              <option value="ED">
              <option value="AD">
              <option value="ATT">
            </datalist>
          </div>        
        <div class="mb-3 col-3">
          <label for="team" class="form-label">Squadra</label>
          <input class="form-control" list="datalistSOptions" id="team" placeholder="Cerca Squadra..." name="team">
          <datalist id="datalistSOptions">
            <img src="https://i.imgur.com/AHoepHa.png" alt=""><option value="Chelsea">
            <option value="West Ham">
            <option value="Werder Brema">
          </datalist>
        </div>
        </div>
        <div class="row">
          <div class="mb-3 col-6">
            <label for="photo" class="form-label">Foto</label>
            <input type="text" class="form-control" id="photo" placeholder="es: https://i.imgur.com/mOIlRs1.png" name="photo">
          </div>
        </div>  
        <div class="row">
          <div class="mb-3 col-1">
            <label for="Gol" class="form-label">Gol</label>
            <input type="number" class="form-control" id="Gol" placeholder="nr. gol" name="goals" value="0" min="0">
          </div>
          <div class="mb-3 col-1">
            <label for="Assist" class="form-label">Assist</label>
            <input type="number" class="form-control" id="Assist" placeholder="nr. assist" name="assist" value="0" min="0">
          </div>
          <div class="mb-3 col-1">
            <label for="motm" class="form-label">MOTM</label>
            <input type="number" class="form-control" id="motm" placeholder="nr. MOTM" name="motm" value="0" min="0">
          </div>
          </div>
          <div class="row">
        <div class="mb-3 col-auto">
          <label for="Gol" class="form-label">Cartellini Gialli</label>
          <input type="number" class="form-control" id="yellow_card" placeholder="nr. gialli" name="yellow_card" value="0" min="0">
        </div>
        <div class="mb-3 col-auto">
          <label for="Gol" class="form-label">Cartellini Rossi</label>
          <input type="number" class="form-control" id="red_card" placeholder="nr. rossi" name="red_card" value="0" min="0">
        </div>
      </div>
        <button href="" class="btn btn-success mt-3">Salva</button>
        <a href="return" class="btn btn-dark mt-3">Ritorna alla lista &nbsp;<i class="far fa-list-alt"></i></a>
    </form>

  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>